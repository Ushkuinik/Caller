<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Storage">

        <ListPreference
            android:key="list_calendar"
            android:title="Calendar"
            android:summary="Select calendar"
            android:dialogTitle="Select calendar" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="WHAT?">

        <EditTextPreference
            android:key="event_title"
            android:title="Title"
            android:summary="Event (Caller)"
            android:dialogTitle="Event title" />

        <EditTextPreference
            android:key="event_description"
            android:title="Description"
            android:summary="Automatic event via Caller"
            android:dialogTitle="Event description" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="WHEN?">

        <company.caller.PreferenceDate
            android:key="event_date"
            android:title="@string/event_date" />

        <company.caller.PreferenceTime
            android:key="event_time"
            android:title="@string/event_time" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="OPTIONS">

        <CheckBoxPreference
            android:key="event_reminder"
            android:title="Reminder"
            android:summaryOn="You will be reminded 15min before event"
            android:summaryOff="Reminder disabled"/>

    </PreferenceCategory>
</PreferenceScreen>